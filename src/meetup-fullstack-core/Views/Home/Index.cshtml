@model IEnumerable<meetup_fullstack_core.Model.Feedback>
<div class="row" id="feedbacks">
    @foreach (var feedback in Model)
    {
    <div class="col s12 m12 l3">
        <div class="card animation--fadein">
            <div class="card-image">
                <img src="@feedback.Imagem">
                <span class="card-title">@feedback.Nome</span>
            </div>
            <div class="card-content">
                <p>Texto do feedback: @feedback.Texto</p>
            </div>
        </div>
    </div>
    }
</div>

<a class="modal-trigger waves-effect waves-light btn-large"  href="#modal1">Dar Feedback</a>

<div id="modal1" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>De um feedback para o amiguinho</h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12 m12">
                        <select id="usuarios" class="icons">
                            <option value="" disabled selected>Selecione o usuário</option>
                        </select>
                        <label>Usuário</label>
                    </div>
                    <div class="input-field col s12">
                        <textarea id="feedback" class="materialize-textarea" length="120"></textarea>
                        <label for="feedback">Feedback</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a id="dar-feedback" href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Dar feedback</a>
    </div>
</div>